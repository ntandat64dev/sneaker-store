@model  App.Models.LoginCustomerModel
@{
    ViewBag.Title = "Đăng Nhập - Sneaker Store";
    Layout = "~/Views/Shared/LayoutLogin.cshtml";
}

<div class="breadcrumbs py-4">
    <div class="container text-left">
        <ul class="bread-list d-inline-block">
            <li class="d-inline-block text-capitalize"><a href="/">Trang chủ<i class="ti-arrow-right mx-2"></i></a></li>
            <li class="d-inline-block text-capitalize"><a href="">Đăng nhập</a></li>
        </ul>
    </div>
</div>

<section class="form-input py-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-7 col-md-7 col-12 text-center">
                <img width="80%" src="@Url.Content("/Content/Images/login_start.jpg")" />
            </div>
            <div class="col-lg-5 col-md-5 col-12">
                <div class="h-100 d-flex align-items-center">
                    @using (Html.BeginForm("LoginCustomer", "Account", FormMethod.Post, new { @class = "w-100 m-0 p-5 text-center" }))
                    {
                        <h5 class="mb-4">Đăng Nhập</h5>
                        @Html.TextBoxFor(model => model.Username, new
                        {
                            @class = "w-100 input-login-field",
                            @autofocus = "autofocus",
                            @placeholder = "Email",
                            @type = "email"
                        })
                        <div class="text-left">
                            @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger validator" })
                        </div>
                        @Html.PasswordFor(model => model.Password, new
                        {
                            @class = "w-100 mt-3 input-login-field",
                            @placeholder = "Mật khẩu",
                            @autocomplete = "off",
                            @type = "password"
                        })
                        <div class="text-left">
                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger validator" })
                        </div>
                        <div class="mt-2">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger validator" })
                        </div>
                        <button type="submit" class="next w-100 mt-4">Đăng nhập</button>
                        <span class="or d-inline-block text-uppercase my-4 position-relative">Hoặc</span>
                        <a class="google d-flex justify-content-center w-100 mb-3">
                            <img width="25px" class="mr-2" src="@Url.Content("/Content/Images/google_logo.png")" alt="">Google
                        </a>
                        <span class="shotcut">
                            <a class="mr-3" href="@Url.Action("ForgotPassword", "Account")">Quên mật khẩu?</a>
                            <a href="@Url.Action("Register", "Account")">Đăng ký?</a>
                        </span>
                    }
                </div>
            </div>
        </div>
    </div>
</section>