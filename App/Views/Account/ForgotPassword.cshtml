@model App.Models.ForgotPassCustomerModel
@{
    ViewBag.Title = "Quên Mật Khẩu - Sneaker Store";
    Layout = "~/Views/Shared/LayoutLogin.cshtml";
}

<div class="breadcrumbs py-4">
    <div class="container text-left">
        <ul class="bread-list d-inline-block">
            <li class="d-inline-block text-capitalize"><a href="/">Trang chủ<i class="ti-arrow-right mx-2"></i></a></li>
            <li class="d-inline-block text-capitalize"><a href="/Account/Login">Đăng nhập<i class="ti-arrow-right mx-2"></i></a></li>
            <li class="d-inline-block text-capitalize"><a href="">Quên mật khẩu</a></li>
        </ul>
    </div>
</div>

<section class="form-input py-3">
    <div class="container">
        <div class="row">
            <div class="col-lg-7 col-md-7 col-12 text-center">
                <img width="80%" src="@Url.Content("/Content/Images/login_start.jpg")" />
            </div>
            <div class="col-lg-5 col-md-5 col-12">
                <div class="h-100 d-flex align-items-center">
                    @using (Html.BeginForm("ForgotPasswordCustomer", "Account", FormMethod.Post, new { @class = "w-100 m-0 p-5 text-center" }))
                    {
                        <h5 class="mb-4">Quên Mật Khẩu</h5>
                        @Html.TextBoxFor(model => model.Email, new
                        {
                            @class = "w-100 input-login-field",
                            @autofocus = "autofocus",
                            @placeholder = "Email",
                            @type = "email"
                        })
                        <div class="text-left">
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger validator" })
                        </div>
                        <div class="mt-2">
                            @Html.ValidationMessage("", new { @class = "text-danger validator" })
                        </div>
                        <button type="submit" class="next w-100 mb-3 mt-4">Xác nhận</button>
                        <span class="shotcut">
                            <a class="mr-3" href="@Url.Action("Login", "Account")">Đăng nhập?</a>
                            <a href="@Url.Action("Register", "Account")">Đăng ký?</a>
                        </span>
                    }
                </div>
            </div>
        </div>
    </div>
</section>